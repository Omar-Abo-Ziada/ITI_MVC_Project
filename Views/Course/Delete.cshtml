@model CourseViewModel
@{
    ViewData["Title"] = "Delete";
}

@section Style {
    <style>
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            border-radius: 0.25rem;
            padding: 1rem;
            margin-bottom: 1rem;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .shadow {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }
    </style>
}

<main class="container" id="main">
    <h1>Delete</h1>

    <div class="alert alert-danger shadow">
        <p>Are you sure you want to delete this Course ?</p>
    </div>

    <form method="post" asp-action="SaveDelete" asp-controller="Course" asp-fragment="main">
        <input type="hidden" name="id" value="@ViewData["id"]" />
        <div>
            <button type="submit" class="btn btn-danger mx-2 my-2">Delete</button>
            <a asp-action="All" asp-controller="Course" asp-fragment="main" class="btn btn-info mx-2 my-2">Cancel</a>
        </div>
    </form>
</main>
